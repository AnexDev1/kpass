{
	"printWidth": 100,
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": false,
	"trailingComma": "none",
	"bracketSpacing": true,
	"overrides": [
		{
			"files": ["README.md"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	],
	"bracketSameLine": true,
	"plugins": ["@ianvs/prettier-plugin-sort-imports"],
	"importOrder": [
		"<BUILTIN_MODULES>",
		"<THIRD_PARTY_MODULES>",

		"^@plasmo/(.*)$",
		"",
		"^@plasmohq/(.*)$",
		"",
		"^~(.*)$",
		"",
		"^[./]"
	]
}
